<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="452dp"
        android:autofillHints="New User"
        android:hint="Enter Name Here"
        android:background="@null"
        android:inputType="textPersonName|textCapWords"
        android:textAlignment="center"
        android:layout_constraintEnd_toEndOf="parent"
        android:layout_constraintStart_toStartOf="parent"
        android:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:layout_marginTop="188dp"
        android:layout_weight="1"
        android:contentDescription="Click Here"
        android:orientation="horizontal"
        android:layout_constraintEnd_toEndOf="parent"
        android:layout_constraintStart_toStartOf="parent"
        android:layout_constraintTop_toTopOf="parent"
        android:srcCompat="@drawable/flag" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:text="Lab 2 GUI"
        android:textSize="34sp"
        android:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/Switch"
        android:layout_width="176dp"
        android:layout_height="36dp"
        android:layout_gravity="fill"
        android:layout_marginTop="380dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:text="@string/Switch"
        android:layout_constraintEnd_toEndOf="parent"
        android:layout_constraintHorizontal_bias="1.0"
        android:layout_constraintRight_toLeftOf="@+id/button"
        android:layout_constraintStart_toStartOf="parent"
        android:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="178dp"
        android:layout_height="47dp"
        android:layout_gravity="fill"
        android:layout_marginTop="372dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:text="@string/button_message"
        android:layout_constraintEnd_toEndOf="parent"
        android:layout_constraintHorizontal_bias="0.0"
        android:layout_constraintLeft_toRightOf="@+id/Switch"
        android:layout_constraintStart_toStartOf="parent"
        android:layout_constraintTop_toTopOf="parent" />
</LinearLayout>